# Nexus Configuration
REALM_ENV=development
NEXUS_PORT=8080
NEXUS_HOST=0.0.0.0

# Realm Database (PostgreSQL)
REALM_CONNECTION=postgresql://postgres:postgres@localhost:5432/everymusic_realm
REALM_POOL_MIN=2
REALM_POOL_MAX=10

# Cipher Configuration (CHANGE THESE!)
CIPHER_PRIMARY_KEY=change-this-to-random-64-char-string-for-production-security
CIPHER_REFRESH_KEY=change-this-refresh-key-to-different-64-char-random-string
TOKEN_LIFESPAN_HOURS=168
REFRESH_LIFESPAN_HOURS=720

# Google Identity Gateway
GOOGLE_IDENTITY_KEY=your-google-client-id.apps.googleusercontent.com
GOOGLE_IDENTITY_LOCK=your-google-client-secret

# Mail Transporter
MAIL_GATEWAY=smtp.gmail.com
MAIL_PORT=587
MAIL_IDENTITY=your-email@gmail.com
MAIL_CREDENTIAL=your-app-password
MAIL_SENDER_ALIAS=Every.music <noreply@everymusic.com>

# Boundaries
PORTAL_ORIGIN=http://localhost:3000
RATE_WINDOW_MS=900000
RATE_THRESHOLD=150
UPLOAD_BYTE_LIMIT=5242880
