{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Every.music",
  "version": "1.0.0",
  "identifier": "music.every.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run begin",
    "beforeBuildCommand": "npm run compile"
  },
  "app": {
    "windows": [
      {
        "title": "Every.music - Find Your Band",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8080; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Music",
    "shortDescription": "Connect musicians, find band members",
    "longDescription": "Every.music helps musicians find band members and collaborators through a feed of announcements. Build your musical profile and join a global community."
  }
}
